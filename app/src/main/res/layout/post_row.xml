<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
     android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_container"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="post title"
            android:maxLines="1"
            android:textColor="#444"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:textColor="#777"
            android:text="Lorem ipsum dolor sit amet, has ut nulla abhorreant. Ad mel semper accumsan deserunt, et epicurei salutatus mea. No diam evertitur ullamcorper pri. Delenit oportere ut mei. Ad sed dicunt graecis."
            android:textSize="14sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>